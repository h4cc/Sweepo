{% extends 'SweepoCoreBundle:Email:layout.html.twig' %}

{% block body %}
    <table style="width:100%; border:1px #ccc solid;" border="0" cellpadding="0" cellspacing="0">
        {% for tweet in tweets %}
            <tr>
                <td style="width:100%; border-bottom:1px #ccc solid;">
                    <table style="width:100%; padding:8px 8px 11px 8px;">
                        <tr>
                            <td style="width:40px;" valign="top">
                                <img src="{{ tweet.ownerProfileImageUrl }}" style="border-radius:6px; -webkit-border-radius:6px; -moz-border-radius:6px; -o-border-radius:6px;"/>
                            </td>
                            <td style="">
                                <table>
                                    <tr>
                                        <td style="font-weight: bold; width:500px;"><a href="http://twitter.com/{{ tweet.ownerScreenName }}" style="color:#333; text-decoration: none;">{{ tweet.ownerName }}</a> <span style="font-weight:normal; font-size:12px; color:#b8b8b8;">@{{ tweet.ownerScreenName }}</span></td>
                                    </tr>
                                    <tr>
                                        <td style="width:500px; margin:2px 0 1px 0; font-size: 15px;">
                                            {{ tweet.text | raw }}
                                        </td>
                                    </tr>
                                    {% if tweet.isRetweeted == true %}
                                        <tr>
                                            <td style="padding-top:10px; color:#b8b8b8">
                                                {{ 'retweeted_by' | trans([], 'messages', user.local) }} <a href="http://twitter.com/{{ tweet.rawUserScreenName }}" style="color:#4689b7">{{ tweet.rawUserName }}</a>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <td style="padding-top:10px;">
                                            <a href="http://twitter.com/{{ tweet.ownerScreenName }}/status/{{ tweet.tweetId }}" style="font-size: 12px; color:#4689b7">{{ 'open_on' | trans([], 'messages', user.local) }} Twitter</a>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        <tr>
                    </table>
                </td>
            </tr>
        {% endfor %}
    </table>
    <table style="width:100%; margin-top:20px;" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>{{ 'daily_email_link_to_sweepo' | trans([], 'messages', user.local) }} <a href="http://www.sweepo.fr">Sweepo</a></td>
        </tr>
    </table>
{% endblock %}