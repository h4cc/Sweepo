<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

        {% block stylesheets %}
            {% stylesheets
                'front/less/main.less'
                filter='less,?yui_css'
            %}

                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

    </head>
    <body>

        <!-- Navbar -->
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    {% if app.user and is_granted('ROLE_USER') %}
                        <a href="{{ path('logout') }}" id="login" class="btn btn-primary"><i class="icon icon-user icon-margin"></i>{{ 'logout' | trans }}</a>
                    {% else %}
                        <a href="{{ path('login') }}" id="login" class="btn btn-primary"><i class="icon icon-twitter icon-margin"></i>{{ 'login' | trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div id="main_container" class="clearfix">
            <div id="container">
                {% block container %}{% endblock %}
            </div>
            <div id="sidebar">
                {% block sidebar %}{% endblock %}
            </div>
        </div>

        {% include "SweepoCoreBundle:Includes:core_data.html.twig" %}

        {% block javascript %}

            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

            {% javascripts
                'components/jquery/jquery.js'
                'components/underscore/underscore.js'
                'components/backbone/backbone.js'
                filter='yui_js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

    </body>
</html>
